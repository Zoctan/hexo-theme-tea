<blockquote class="post-copyright">
    <div class="content">
        <%- partial('updated') %>
        <% if (theme.postMessage) { %>
        <p><%- _.template(theme.postMessage)(locals) %></p>
        <% } %>
    </div>
    <footer>
        <a href="<%- config.url %>">
            <img src="<%- url_for(theme.avatar) %>" alt="<%- config.author %>">
            <%- config.author %>
        </a>
    </footer>
</blockquote>
